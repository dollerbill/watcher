<p id="notice"><%= notice %></p>

<h3>Would you like to watch <%= @movie.name %>?</h3>
<% def rate_params(reaction)
  { user_reaction: { reaction: reaction, movie_id: @movie.id, user_id: current_user.id   } }
 end %>

    <div class="container rate">
      <div class="row">
        <div class="col"></div>
        <div class="col">
          <img src="<%= @movie.image_url %>" height="400" />

          <div>
            <%=
              button_to 'Yes',
                        reaction_path,
                        method: :post,
                        params: rate_params('positive'),
                        class: "btn btn-primary",
                        form: { style: 'display:inline-block;' }
            %>
            <%=
              button_to 'No',
                        reaction_path,
                        method: :post,
                        params: rate_params('negative'),
                        class: "btn btn-primary",
                        form: { style: 'display:inline-block;' }
            %>
          </div>
        </div>

        <div class="col"></div>
      </div>
    </div>
