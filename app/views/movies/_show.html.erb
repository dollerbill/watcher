<p id="notice"><%= notice %></p>

<container>
  <div class="row">
    <div class="col"></div>
    <div class="col" align="center">
      <%= image_tag("movie_posters/#{@movie.image_path}", class:'poster') if @movie.image_at_path? %>

      <div class="centered bottom-space">
        <p> Available on: <%= @movie.streaming_services.map(&:capitalize).sort.join(', ') %> </p>

        <% if @movie.length %>
          <p> Runtime: <%= @movie.length %> minutes </p>
        <% end %>

        <p>Released: <%= @movie.release_year %> </p>
        <%= @movie.description %>
      </div>

        <a href="https://www.imdb.com/title/<%= @movie.imdb_id %>" class="btn btn-primary">
          View on IMDB
        </a>

    </div>
    <div class="col"></div>
  </div>
</container>
