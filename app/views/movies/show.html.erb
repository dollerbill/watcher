<p id="notice"><%= notice %></p>

<container>
  <div class="row">
    <div class="col"></div>
    <div class="col" align="center">
      <%= image_tag("movie_posters/#{@movie.image_path}", height: 400) if @movie.image_at_path? %>
      <div class="centered">
        <h5> <%= @movie.name %> </h5>
        <p> Available on: <%= @movie.streaming_services.map(&:capitalize).sort.join(', ') %> </p>
        <p> Runtime: <%= @movie.length %> minutes </p>
        <a href="https://www.imdb.com/title/<%= @movie.imdb_id %>" class="btn btn-primary">
          View on IMDB
        </a>
      </div>
    </div>
    <div class="col"></div>
  </div>
</container>
